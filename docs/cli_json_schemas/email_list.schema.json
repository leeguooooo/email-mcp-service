{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["success", "emails"],
  "properties": {
    "success": { "type": "boolean" },
    "error": {
    "oneOf": [
      { "type": "string" },
      {
        "type": "object",
        "required": ["code", "message"],
        "properties": {
          "code": { "type": "string" },
          "message": { "type": "string" },
          "detail": {}
        },
        "additionalProperties": true
      }
    ]
  },
    "emails": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "uid", "subject", "from", "date", "unread", "account", "account_id", "folder"],
        "properties": {
          "id": { "type": "string" },
          "uid": { "type": "string" },
          "message_id": { "type": "string" },
          "subject": { "type": "string" },
          "from": { "type": "string" },
          "date": { "type": "string" },
          "unread": { "type": "boolean" },
          "has_attachments": { "type": "boolean" },
          "account": { "type": "string" },
          "account_id": { "type": "string" },
          "folder": { "type": "string" },
          "source": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
