{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["success", "status"],
  "properties": {
    "success": { "type": "boolean" },
    "error": {
    "oneOf": [
      { "type": "string" },
      {
        "type": "object",
        "required": ["code", "message"],
        "properties": {
          "code": { "type": "string" },
          "message": { "type": "string" },
          "detail": {}
        },
        "additionalProperties": true
      }
    ]
  },
    "status": {
      "type": "object",
      "required": ["config_path"],
      "properties": {
        "config_path": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
