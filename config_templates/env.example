# n8n 邮件监控系统环境变量配置

# 飞书 Webhook URL
FEISHU_WEBHOOK=https://open.larksuite.com/open-apis/bot/v2/hook/a56c9638-cb65-4f95-bb11-9eb19e09692a

# AI API 密钥 (选择一个)
# OpenAI API Key (推荐 - 便宜且快速)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (可选 - 更智能但较贵)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Python 路径 (确保 n8n 能找到项目)
PYTHONPATH=/Users/leo/github.com/mcp-email-service

# n8n 相关配置 (可选)
N8N_LOG_LEVEL=info
N8N_BASIC_AUTH_ACTIVE=false

# 邮件监控配置 (可选，会覆盖配置文件)
# EMAIL_FETCH_LIMIT=20
# EMAIL_UNREAD_ONLY=true
# AI_PRIORITY_THRESHOLD=0.7
# NOTIFICATION_ENABLED=true

# 调试模式 (可选)
# DEBUG=true
# LOG_LEVEL=DEBUG
